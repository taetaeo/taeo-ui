{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./lib", // lib폴더에 ts 타입 속성을 빌드한다.
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "typeRoots": ["@types"],
    "baseUrl": "./src/"
  },
  "include": ["**/*.tsx", "**/*.ts", "**/*.d.ts", "index.ts", "rollup.config.mjs"],
  "exclude": ["node_modules", "storybook-static/**/*", "./dist/**/*", "./lib/**/*", "./example/**/*", "./src/stories/*"]
}
